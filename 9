<!DOCTYPE html>
<html>
<head>
    <title>Inscripción a Mesas de Examen</title>
</head>
<body>
    <h1>Formulario de Inscripción a Mesas de Examen</h1>
    <form action="procesar_inscripcion.php" method="post">
        <label for="nombre">Apellidos y Nombres:</label>
        <input type="text" id="nombre" name="nombre" required><br><br>
        
        <label for="dni">DNI:</label>
        <input type="text" id="dni" name="dni" required><br><br>
        
        <label for="fecha_nacimiento">Fecha de Nacimiento:</label>
        <input type="date" id="fecha_nacimiento" name="fecha_nacimiento" required><br><br>
        
        <label for="curso_actual">Curso Actual:</label>
        <input type="text" id="curso_actual" name="curso_actual" required><br><br>
        
        <label for="materias_adeudadas">Cantidad de Materias Adeudadas:</label>
        <input type="number" id="materias_adeudadas" name="materias_adeudadas" required><br><br>
        
        <label for="materia_inscripcion">Materia en la que se inscribe:</label>
        <input type="text" id="materia_inscripcion" name="materia_inscripcion" required><br><br>
        
        <label for="curso_materia">Curso al que pertenece la materia:</label>
        <input type="text" id="curso_materia" name="curso_materia" required><br><br>
        
        <label for="fecha_inscripcion">Fecha de Inscripción:</label>
        <input type="date" id="fecha_inscripcion" name="fecha_inscripcion" required><br><br>
        
        <input type="submit" value="Confirmar Inscripción">
    </form>
</body>
</html>
<?php
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $nombre = $_POST['nombre'];
    $dni = $_POST['dni'];
    $fecha_nacimiento = $_POST['fecha_nacimiento'];
    $curso_actual = $_POST['curso_actual'];
    $materias_adeudadas = $_POST['materias_adeudadas'];
    $materia_inscripcion = $_POST['materia_inscripcion'];
    $curso_materia = $_POST['curso_materia'];
    $fecha_inscripcion = $_POST['fecha_inscripcion'];
    
    $inscripcion = "Apellidos y Nombres: $nombre\n";
    $inscripcion .= "DNI: $dni\n";
    $inscripcion .= "Fecha de Nacimiento: $fecha_nacimiento\n";
    $inscripcion .= "Curso Actual: $curso_actual\n";
    $inscripcion .= "Cantidad de Materias Adeudadas: $materias_adeudadas\n";
    $inscripcion .= "Materia en la que se inscribe: $materia_inscripcion\n";
    $inscripcion .= "Curso al que pertenece la materia: $curso_materia\n";
    $inscripcion .= "Fecha de Inscripción: $fecha_inscripcion\n";
    $inscripcion .= "-----------------------------\n";
    
    file_put_contents('comprobante.txt', $inscripcion, FILE_APPEND);
    
    echo "Inscripción realizada exitosamente.";
}
?>
